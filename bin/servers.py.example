#!/usr/bin/env python2.7

from fabric.api import env

# add the list of generic servers
env.servers = {
    "foo": "foo.example.com",
    "bar": "bar.example.com"
}

env.servers.update({
    "all": [
        env.servers["foo"],
        env.servers["bar"],
    ]
})

# this is to deploy to the clone server
env.servers.update({
    "clone": "clone.example.com",
})
